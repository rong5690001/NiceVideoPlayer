<?xml version="1.0" encoding="utf-8"?><RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent">    <View        android:id="@+id/blackView"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="@android:color/black"        android:visibility="gone"/>    <LinearLayout        android:id="@+id/toolbar"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical"        android:visibility="gone"        tools:visibility="visible">        <TextView            android:id="@+id/statusBar"            android:layout_width="match_parent"            android:layout_height="wrap_content"/>        <!--toolbar-->        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="@dimen/header_height"            android:paddingRight="10dp">            <RelativeLayout                android:id="@+id/rel_back"                android:layout_width="wrap_content"                android:layout_height="wrap_content">                <ImageView                    android:layout_width="wrap_content"                    android:layout_height="match_parent"                    android:background="@android:color/transparent"                    android:paddingLeft="10dp"                    android:paddingRight="10dp"                    android:src="@drawable/icon_white_back"/>            </RelativeLayout>            <ImageView                android:id="@+id/share_btn"                android:layout_width="30dp"                android:layout_height="30dp"                android:layout_alignParentRight="true"                android:layout_centerVertical="true"                android:src="@drawable/icon_share"                android:visibility="gone"                tools:visibility="visible"/>        </RelativeLayout>    </LinearLayout>    <RelativeLayout        android:id="@+id/shadowLayout"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="@color/black_alpha_99"        android:visibility="gone"        tools:visibility="visible">        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerInParent="true"            android:orientation="vertical">            <TextView                android:id="@+id/hintTitle"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text=""                android:textColor="@android:color/white"                android:textSize="14sp"/>            <FrameLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="center_horizontal"                android:layout_marginTop="21dp">                <Button                    android:id="@+id/flowBtn"                    android:layout_width="wrap_content"                    android:layout_height="25dp"                    android:background="@drawable/round_white_3_edge"                    android:drawableLeft="@drawable/flow_play_btn_white"                    android:drawablePadding="5dp"                    android:gravity="left|center_vertical"                    android:paddingLeft="10dp"                    android:paddingTop="5dp"                    android:paddingRight="10dp"                    android:paddingBottom="5dp"                    android:textColor="@android:color/white"                    android:textSize="12sp"                    tools:text="12M流量"/>            </FrameLayout>        </LinearLayout>    </RelativeLayout>    <RelativeLayout        android:id="@+id/bottomLayout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:background="@drawable/icon_progress_bg"        android:paddingBottom="6dp">        <TextView            android:id="@+id/current_time"            style="@style/TextShadowStyle"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentLeft="true"            android:layout_centerVertical="true"            android:layout_marginLeft="10dp"            android:layout_marginRight="10dp"            android:text="00:00"            android:textColor="@android:color/white"            android:textSize="10sp"/>        <android.support.v7.widget.AppCompatSeekBar            android:id="@+id/seekbar"            style="@style/SeekBarStyle"            android:layout_width="match_parent"            android:layout_height="30dp"            android:layout_centerVertical="true"            android:layout_marginRight="10dp"            android:layout_toLeftOf="@+id/tv_total_time"            android:layout_toRightOf="@+id/current_time"            android:max="100"            tools:ignore="all"            tools:progress="50"/>        <TextView            android:id="@+id/tv_total_time"            style="@style/TextShadowStyle"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_marginRight="7dp"            android:layout_toLeftOf="@+id/iv_orientation"            android:text="00:00"            android:textColor="@android:color/white"            android:textSize="10dp"/>        <ImageView            android:id="@+id/iv_orientation"            android:layout_width="30dp"            android:layout_height="30dp"            android:layout_alignParentRight="true"            android:layout_centerVertical="true"            android:layout_marginRight="8dp"            android:scaleType="fitCenter"            android:src="@drawable/icon_make_max"/>    </RelativeLayout>    <ImageView        android:id="@+id/iv_centerBtn"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerInParent="true"        android:scaleType="fitCenter"        android:src="@drawable/icon_pause_btn"        android:visibility="gone"        tools:visibility="visible"/>    <LinearLayout        android:id="@+id/loading_view"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerInParent="true"        android:gravity="center"        android:orientation="horizontal"        android:visibility="gone">        <ProgressBar            style="?android:attr/progressBarStyle"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginRight="5dp"            android:indeterminateTint="@android:color/white"/>        <!--<TextView-->        <!--android:layout_width="wrap_content"-->        <!--android:layout_height="wrap_content"-->        <!--android:layout_marginLeft="5dp"-->        <!--android:text="缓冲中"-->        <!--android:textColor="@android:color/white"-->        <!--android:textSize="@dimen/text_size_normal"/>-->    </LinearLayout></RelativeLayout>